<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>:
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>:
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :category_id %>:
    <%= collection_select(:product, :category_id, Category.all, :id, :name, {:prompt => 'Choose a category'}) %>
  </div>

  <div class="field">
    <%= form.label :size_id %> (optional):
    <%= form.text_field :size_id %>
  </div>

  <div class="field">
    <%= form.label :colorway_id %> (optional):
    <%= collection_select(:product, :colorway_id, Colorway.all, :id, :name, {:prompt => 'Choose a color/colorway'}) %>
  </div>

  <div class="field">
    <%= form.label :design_id %> (optional):
    <%= collection_select(:product, :design_id, Design.all, :id, :name, {:prompt => 'Choose a design'}) %>
  </div>

 

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
