<%= form_with(model: cake_dealer, local: true) do |form| %>
  <% if cake_dealer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cake_dealer.errors.count, "error") %> prohibited this cake_dealer from being saved:</h2>

      <ul>
      <% cake_dealer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
<% end %>

  <%= form_for @cake_dealer, html: {multipart: true}  do |f| %>
    <%= fields_for :user, @cake_dealer.user, multipart: true do |p| %>
        <div class="wrapper">
            <div class="form-group">
                <label for="firstName">First Name</label>
                <%= p.text_field :first_name, placeholder: "Enter First Name", class: "form-control" %>
            </div>
            <div class="form-group">
                <label for="lastName">Last Name</label>
                <%= p.text_field :last_name, placeholder: "Enter Last Name", class: "form-control" %>
            </div>
        </div>
        <div class="wrapper">
            <div class="form-group">
                <label for="hometown">Hometown</label>
                <%= p.text_field :hometown, class: "form-control" %>
            </div>

            <div class="form-group">
                <label for="username">Username</label>
                <%= p.text_field :username, placeholder: "Enter Username", class: "form-control" %>
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <%= p.text_field :email, placeholder: "Enter Email", class: "form-control" %>
            </div>
        </div>
        <div class="wrapper">
            <div class="form-group">
                <label for="Password">Temp Password</label>
                <%= p.password_field :password, placeholder: "Enter Temp Password", class: "form-control" %>
            </div>
        </div>

        <div class="form-group">
            <label for="photo">Profile Picture:</label>
            <%= p.file_field :photo %>
        </div>
        
        <% end %>
        <div class="actions"> <%= f.submit %> </div>
    <% end %>
<% end %>
