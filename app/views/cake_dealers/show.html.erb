<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_cake_dealer_path(@cake_dealer) %> |
<%= link_to 'Back', cake_dealers_path %>

<div class="card" style="width: 18rem;">
  <% if @cake_dealer.user.photo.attached? %>
    <%= image_tag @cake_dealer.user.photo, :class => "card-img-top" %>
  <% else %>
    <%= image_tag image_path("temp_avatar.jpeg"), :class => "card-img-top" %>

        <% end %>
  <div class="card-body">
    <h5 class="card-title"><%= @cake_dealer.user.first_name %></h5>
    <p class="card-text"><%= @cake_dealer.user.hometown %></p>

    <% if has_role?("Admin") %>
    <%= link_to 'Inventory', inventory_path(@cake_dealer), :class => "btn btn-primary" %>
    <% end %>
  </div>
</div>